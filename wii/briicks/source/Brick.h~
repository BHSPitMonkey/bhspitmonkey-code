/*
 *      Brick.h
 *      
 *      Copyright 2009 Stephen Eisenhauer <mail@stepheneisenhauer.com>
 * 
 * 		Class for Brick objects.  A Brick is any in-game object that
 * 		moves (with 2D physics).  Bricks and Balls will both be
 * 		types of Bricks.
 */

#include <wiisprite.h>
#include "Mover.h"

#ifndef BRICK_H
#define BRICK_H

using namespace wsp;

class Brick : public Mover {
public:
// constructors and destructor:

	// initializer
	void spawn(int x, int y);

	Brick();		// default constructor
	Brick(int x, int y);
	~Brick();		// destructor

	// Getters

	// Brick operations:
	bool isDead();
	void wasHit();	// Called when hit by ball
	void Draw();

protected:

	bool dead;

};  // end class

#endif
