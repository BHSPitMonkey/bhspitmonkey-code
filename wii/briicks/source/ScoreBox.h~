 * 		Class for Mover objects.  A Mover is any in-game object that
 * 		moves (with 2D physics).  Movers and Balls will both be
 * 		types of Movers.
 */

#include <wiisprite.h>

#ifndef SCOREBOX_H
#define SCOREBOX_H

#define MAXSCORE 15

using namespace wsp;

class ScoreBox {
public:

	// constructors and destructor:
	ScoreBox(int x, int y, int width);
	~ScoreBox();		// destructor

	// Getters

	// Operations:
	bool incrementScore();
	void Draw();

protected:

	int score;
   
	Rectangle outerRect;
	Rectangle innerRect;
	Quad outerQuad;
	Quad innerQuad;

};  // end class

#endif
